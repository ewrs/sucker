{
    "manifest_version": 2,
    "name": "__MSG_MyName__",
    "description": "__MSG_extText__",
    "default_locale": "de",
    "version": "@@ProductVersion@@",
    "homepage_url": "https://github.com/ewrs/sucker",
    "permissions": [
        "webRequest",
        "storage",
        "nativeMessaging",
        "tabs",
        "downloads",
        "<all_urls>"
    ],
    "applications": {
        "gecko": {
            "id": "{d7072178-2f85-11ea-a967-c31332846f5f}",
            "strict_min_version": "57.0"
        }
    },
    "background": {
        "scripts": [
            "common.js",
            "animations.js",
            "background.js"
        ]
    },
    "options_ui": {
        "page": "options.html"
    },
    "icons": {
        "24": "data/sucker-idle.svg"
    },
    "browser_action": {
        "browser_style": true,
        "default_popup": "popup.html",
        "theme_icons": [
            {
                "dark": "data/sucker-idle-dark.svg",
                "light": "data/sucker-idle.svg",
                "size": 16
            }
        ]
    }
}
