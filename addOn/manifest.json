{
    "manifest_version": 2,
    "name": "__MSG_MyName__",
    "description": "__MSG_extText__",
    "default_locale": "de",
    "version": "0.1.2",
    "permissions": [
        "webRequest",
        "*://*/*.m3u8",
        "*://*/*.m3u8?*",
        "storage",
        "nativeMessaging",
        "tabs",
        "<all_urls>"
    ],
    "applications": {
        "gecko": {
            "id": "{d7072178-2f85-11ea-a967-c31332846f5f}",
            "strict_min_version": "57.0"
        }
    },
    "background": {
        "scripts": [
            "background.js"
        ]
    },
    "options_ui": {
        "page": "options.html"
    },
    "icons": {
        "16": "data/sucker-dark.svg"
    },
    "browser_action": {
        "browser_style": true,
        "default_popup": "popup.html",
        "theme_icons": [
            {
                "dark": "data/sucker-dark.svg",
                "light": "data/sucker-light.svg",
                "size": 16
            }
        ]
    }
}
